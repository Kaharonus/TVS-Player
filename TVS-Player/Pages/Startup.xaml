<Page x:Class="TVS_Player.Startup"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVS_Player"
      mc:Ignorable="d" 
      d:DesignHeight="648" d:DesignWidth="1104"
      Title="Startup">
    <Grid Visibility="Visible">
        <Canvas >
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#4C000000" Offset="0"/>
                    <GradientStop Offset="1" Color="#00000000"/>
                </LinearGradientBrush>
            </Canvas.Background>
        </Canvas>
        <Grid Visibility="Visible">
            <TextBlock x:Name="textBlock" Margin="0,50,0,0" Height="auto" Width="auto" FontSize="36" Foreground="White" TextAlignment="Center"><Run Text="Welcome!"/><LineBreak/><Run Text="No database was found"/><LineBreak/><Run/></TextBlock>
            <Button x:Name="addDB" Content="add" HorizontalAlignment="Left" Margin="314,330,0,0" VerticalAlignment="Top" Width="74" Click="addDB_Click"/>
            <Button x:Name="importDB" Content="import" HorizontalAlignment="Left" Margin="627,330,0,0" VerticalAlignment="Top" Width="75" Click="importDB_Click"/>
        </Grid>
        <Grid x:Name="addShow" Margin="0" Background="#CC000000" Visibility="Hidden">
            <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Background="{Binding Mode=OneWay, Source={StaticResource BackgroundBrush}}" Height="300" Width="500">
                <TextBox x:Name="showLocation" Margin="5,10,5,0" VerticalAlignment="Top" TextWrapping="Wrap" Text="Enter TV Show location or double click to select" Style="{DynamicResource SearchBox}" MouseDoubleClick="selectFolder" TextChanged="showLocation_TextChanged" GotFocus="showLocation_GotFocus" Height="25"/>
                <TextBox x:Name="nameTxt" Margin="5,50,5,0" VerticalAlignment="Top" TextWrapping="Wrap" Text="Show name" Style="{DynamicResource SearchBox}" TextChanged="nameTxt_TextChanged" GotFocus="nameTxt_GotFocus" Height="25"/>
                <Border BorderThickness="1" CornerRadius=".5,.5,.5,.5" BorderBrush="#FF252525" VerticalAlignment="Top" Background="#FF252525" Margin="5,80,5,0"/>
                <ScrollViewer Margin="5,85,5,45">
                    <StackPanel x:Name="panel">
                        <local:tvShowControl Visibility="Hidden" />
                    </StackPanel>
                </ScrollViewer>
                <Border BorderThickness="1" CornerRadius=".5,.5,.5,.5" BorderBrush="#FF252525" VerticalAlignment="Bottom" Background="#FF303030" Margin="5,0,5,40"/>
                <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,85,10" Height="25" Width="52" Content="Finish" Style="{DynamicResource SideBarButton}" Background="#77303030" Foreground="#FF969696" Click="Button_Click"/>
                <Button HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,10" Height="25" Width="52" Content="Close" Style="{DynamicResource SideBarButton}" Background="#77303030" Foreground="#FF969696" Click="Button_Click_1"/>
            </Grid>
        </Grid>
        <Grid x:Name="selectNewLoc" Background="#CC000000" Visibility="Visible">
            <Grid Background="{Binding Mode=OneWay, Source={StaticResource BackgroundBrush}}" Height="100" Width="275" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Border BorderThickness="1" CornerRadius=".5,.5,.5,.5" BorderBrush="#FF252525" VerticalAlignment="Top" Background="#FF252525" Margin="5,30,5,0"/>
                <Border BorderThickness="1" CornerRadius=".5,.5,.5,.5" BorderBrush="#FF252525" VerticalAlignment="Top" Background="#FF252525" Margin="5,70,5,0"/>
                <Label Content="Where do you want to create your database" Height="30" VerticalAlignment="Top" Foreground="#FF969696" HorizontalAlignment="Center" />
                <TextBox x:Name="newDbLoc" Style="{DynamicResource SearchBox}"  VerticalAlignment="Top" Margin="5,40,5,0" TextChanged="newDbLoc_TextChanged" GotFocus="newDbLoc_GotFocus" MouseDoubleClick="newDbLoc_MouseDoubleClick" Text="Enter location (double click to select)"/>
                <Button Content="Cancel" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,10,5" Width="40" Style="{DynamicResource SideBarButton}" Background="#20000000" />
                <Button Content="Ok" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="0,0,60,5" Width="40" Style="{DynamicResource SideBarButton}" Background="#20000000" />
            </Grid>
        </Grid>
    </Grid>
    
</Page>
