<Page x:Class="TVS_Player.Shows"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVS_Player"
      mc:Ignorable="d" 
      d:DesignHeight="648" d:DesignWidth="1152"
      Title="Shows">

    <Grid>
        <Grid x:Name="AddShowButton" Height="50" Width="50" Grid.Row="1" Panel.ZIndex="10" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="50,30" MouseUp="AddShowButton_MouseUp">
            <Ellipse Fill="{DynamicResource AccentColor}"/>
            <TextBlock Text="+" Background="{x:Null}" Foreground="White" TextAlignment="Center" FontSize="31"/>
        </Grid>
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <WrapPanel  x:Name="List" Margin="10,30,10,10">
                
            </WrapPanel>
        </ScrollViewer>
    </Grid>
</Page>
