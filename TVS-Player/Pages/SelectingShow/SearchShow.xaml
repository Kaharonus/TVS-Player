<Page x:Class="TVS_Player.SearchShow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVS_Player"
      mc:Ignorable="d" 
      d:DesignHeight="200" d:DesignWidth="400"
      Title="SearchShow">

    <Grid Background="{Binding Mode=OneWay, Source={StaticResource BackgroundBrush}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBox x:Name="nameTxt" Grid.Row="0" Margin="5,5,5,0" VerticalAlignment="Top" TextWrapping="Wrap" Text="Show name" Style="{DynamicResource SearchBox}" TextChanged="nameTxt_TextChanged" GotFocus="nameTxt_GotFocus" Height="25"/>
        <Border BorderThickness="1"  Grid.Row="0" CornerRadius=".5,.5,.5,.5" BorderBrush="#FF252525" VerticalAlignment="Top" Background="#FF252525" Margin="5,40,5,0"/>
        <ScrollViewer Margin="5,0" Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="panel">
                <!-- <local:tvShowControl Visibility="Hidden" />-->
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
