<Grid x:Class="TVS_Player.ShowRectangle"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="136" Margin="5" MouseLeftButtonDown="ShowClicked_Event">
    <Border CornerRadius="5">
        <Image x:Name ="Image"  Height="200" Width="136">
            <Image.Effect>
                <DropShadowEffect BlurRadius="20" Direction="270" Opacity="0.4"/>
            </Image.Effect>
        </Image>
    </Border>
</Grid>
