<UserControl x:Class="TVS_Player.tvShowBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="457">
    <Grid>
        <Grid x:Name="tvShow" Margin="0,0,-457,-60" Height="60" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="0">
            <Border Margin="5,5,5,5" CornerRadius="2" Background="#FF252525">
                <Grid>
                    <Button x:Name="confirm" Content="Button" Margin="0,5,0,5" HorizontalAlignment="Right" Style="{DynamicResource SideBarButton}" Background="#252525"/>
                    <Button x:Name="info" Content="Button" Margin="0,5,44,5" HorizontalAlignment="Right" Style="{DynamicResource SideBarButton}" Background="#252525"/>
                </Grid>
            </Border>
        </Grid>

    </Grid>
</UserControl>
