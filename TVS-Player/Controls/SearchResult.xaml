<UserControl x:Class="TVS_Player.SearchResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d"
             MaxHeight="25"
             d:DesignHeight="25" d:DesignWidth="380" Margin="10,5">
    <Grid>
        <Grid Background="{StaticResource LighterBackgroundBrush}" Height="25">
            <Grid.BitmapEffect>
                <DropShadowBitmapEffect Color="Black" Direction="315" ShadowDepth="3" Softness=".76" Opacity="0.6"/>
            </Grid.BitmapEffect>
            <TextBlock x:Name="SerachText" Text="Game of Thrones S01E01" Margin="5,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="17" />
        </Grid>

    </Grid>
</UserControl>
