<UserControl x:Class="TVS_Player.FolderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="483.714">
    <Grid Margin="5">
        <Border x:Name="foundShow" CornerRadius="2" Background="#FF252525">
            <Grid>
                <TextBlock TextWrapping="Wrap" Text="TextBlock" Margin="5,5,73,5" Foreground="#FF4B4B4B" FontSize="20" />
                <Button x:Name="removeLocation" Width="30" HorizontalAlignment="Right" Style="{DynamicResource SideBarButton}" Background="#252525"  Margin="5,6">
                    <Image Source="../Icons/delete.png" HorizontalAlignment="Right" Width="20" Height="20"/>
                </Button>
                <Button x:Name="editLocation" Width="30" HorizontalAlignment="Right" Style="{DynamicResource SideBarButton}" Background="#252525" Margin="38,6">
                    <Image Source="../Icons/edit.png" HorizontalAlignment="Right" Width="20" Height="20"/>
                </Button>
            </Grid>
        </Border>
    </Grid>
</UserControl>
