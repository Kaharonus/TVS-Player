<UserControl x:Class="TVS_Player.ActorInfo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             d:DesignHeight="171.897" d:DesignWidth="192">
    <Grid>
        <Grid>
            <Image x:Name="actorPic" Margin="20,10,20,60"  Width="auto" Grid.Column="0"/>
            <TextBlock x:Name="ActorName" Text="Actor"  HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Margin="0,35" FontSize="14" Foreground="White" TextDecorations="Underline"/>
            <Label Content="playing character:"  HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,15" Foreground="White"/>
            <Label x:Name="CharacterName" Content="charname"  HorizontalAlignment="Center" VerticalAlignment="Bottom" FontWeight="Bold" Foreground="White"/>

        </Grid>

    </Grid>
</UserControl>
