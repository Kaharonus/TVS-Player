<UserControl x:Class="TVS_Player.Notification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d"
             Height="40"
             d:DesignHeight="40" d:DesignWidth="290" Margin="10,6">
    <Grid  Height="40px" Background="{StaticResource AccentColor}">
        <Grid.BitmapEffect>
            <DropShadowBitmapEffect Color="Black" Direction="315" ShadowDepth="3" Softness=".76" Opacity="1"/>
        </Grid.BitmapEffect>
        <TextBlock x:Name="MainText" Foreground="White" FontSize="18" Margin="2,0,70,0" VerticalAlignment="Top" Text="Main Text"/>
        <TextBlock x:Name="SecondText" Foreground="White" FontSize="16" HorizontalAlignment="Right" Margin="2" Width="63" VerticalAlignment="Top" Text="5.6 MB/s"/>
        <ProgressBar x:Name="ProgBar" VerticalAlignment="Bottom" Height="7" Margin="10,6" />
    </Grid>
</UserControl>
