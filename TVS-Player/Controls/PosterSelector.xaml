<UserControl x:Class="TVS_Player.PosterSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             Height="210" Width="144">
    <Grid Margin="5">
        <Border x:Name="border" BorderBrush="#FF0385B6">
            <Image x:Name="Thumbnail" MouseLeftButtonDown="ImageClicked_Event"/>
        </Border>
    </Grid>
</UserControl>
