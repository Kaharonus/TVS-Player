<UserControl x:Class="TVS_Player.SeasonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="732">
    <Grid x:Name="SeasonGrid">
        <TextBlock x:Name="seasonText" Text="Season 1" Foreground="White" FontSize="28" Width="200" HorizontalAlignment="Left" Margin="5,0"/>
        <TextBlock Text="Finished:" Foreground="White" FontSize="20" Width="100" HorizontalAlignment="Right" Margin="60,5"/>
        <TextBlock Text="Number of episodes:" Foreground="White" FontSize="20" Width="190" HorizontalAlignment="Right" Margin="200,5"/>
        <TextBlock x:Name="finishedText" Text="Yes" Foreground="White" FontSize="20" Margin="40,5" HorizontalAlignment="Right" FontWeight="Bold" Width="30"/>
        <TextBlock x:Name="noEp" Text="16" Foreground="White" FontSize="20" Margin="175,5" HorizontalAlignment="Right" FontWeight="Bold" Width="25"/>
        <Border Margin="5,0" Height="2" VerticalAlignment="Bottom" Background="#222222" CornerRadius="2" />
        </Grid>
</UserControl>
