<Window x:Class="TVS_Player.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVS_Player"
        mc:Ignorable="d"
        Title="Please wait..." Height="100" Width="360"
        Loaded="Window_Loaded"
        >
    <Grid Background="{StaticResource BackgroundBrush}">
        <TextBlock x:Name="MainText" Text="Please wait" Foreground="White" Margin="5,9" VerticalAlignment="Top" Height="25" TextWrapping="Wrap" FontSize="14"></TextBlock>
        <ProgressBar x:Name="Progress" VerticalAlignment="Bottom" Height="20" Value="0" Margin="5,10" />
        <TextBlock x:Name="SecondText" Foreground="White" VerticalAlignment="Bottom" Text="10/10" Margin="10,12" TextAlignment="Right"></TextBlock>
    </Grid>
</Window>
