<UserControl x:Class="TVS_Player.BackButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             Height="26" Width="26">
    <Border Background="{DynamicResource TopBarBackgrdound}" CornerRadius="13" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" MouseLeftButtonUp="Border_MouseLeftButtonUp">
        <Border.Effect>
            <DropShadowEffect Opacity="0.5" Direction="300" BlurRadius="10" />
        </Border.Effect>
        <Image Source="{DynamicResource Back}" RenderOptions.BitmapScalingMode="HighQuality" Margin="8.5" />
    </Border>
</UserControl>
