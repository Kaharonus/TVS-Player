<UserControl x:Class="TVS_Player.SearchResultControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             Height="35" d:DesignWidth="800"  Margin="5">
    <Border Background="{StaticResource TopBarBackground}" CornerRadius="3" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave">
        <Grid>
            <TextBlock x:Name="ResultName" Foreground="{DynamicResource TextColor}" FontSize="18" Text="Game of Thrones" Margin="5,0,0,0" VerticalAlignment="Top" />
            <TextBlock x:Name="ResultType" Foreground="{DynamicResource TextColor}" Text="Series" Margin="10,0,0,0" VerticalAlignment="Bottom" />
        </Grid>
    </Border>
</UserControl>
