<UserControl x:Class="TVS_Player.Loading"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             d:DesignHeight="32" d:DesignWidth="32">
    <Image x:Name="LoadingIcon" Source="{StaticResource Reload}" RenderOptions.BitmapScalingMode="HighQuality" RenderTransformOrigin="0.5,0.5">
        <Image.RenderTransform>
            <TransformGroup>
                <RotateTransform Angle="1"/>
            </TransformGroup>
        </Image.RenderTransform>
    </Image>
</UserControl>
