<UserControl x:Class="TVS_Player.ServerResult"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" d:DesignWidth="350">
    <Border Height="35" Margin="5,5,5,0" Background="{DynamicResource Background}" CornerRadius="3" MouseEnter="Border_MouseEnter" MouseLeave="Border_MouseLeave" Style="{StaticResource ProductFont}">
        <Grid>
            <Image Source="{StaticResource Connection}" Margin="5" HorizontalAlignment="Left" />
            <TextBlock x:Name="Address" HorizontalAlignment="Center" FontSize="14" VerticalAlignment="Center" Foreground="{DynamicResource TextColor}" />
        </Grid>
    </Border>
</UserControl>
