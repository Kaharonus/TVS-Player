<Page x:Class="TVS_Player.SeriesView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVS_Player"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SeriesView">

    <ScrollViewer Background="{StaticResource Background}" Margin="0,5">
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ScrollBar}" />
        </ScrollViewer.Resources>

        <Grid Loaded="Grid_Loaded">
            <Grid.RowDefinitions>
                <RowDefinition Height="400"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Border CornerRadius="0,0,5,0">
                <Border.Background>
                    <LinearGradientBrush EndPoint="0.5,0.80" StartPoint="0.5,1.2">
                        <GradientStop Color="Black" Offset="0.3" />
                        <GradientStop Color="#00000000" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <Grid Margin="15,0,15,0">
                        <Border  Margin="5" Height="309" Width="210" HorizontalAlignment="Left" VerticalAlignment="Top" CornerRadius="5,5,6,6">
                            <Border.Effect>
                                <DropShadowEffect Opacity="0.5" Direction="300" />
                            </Border.Effect>
                            <Grid>
                                <Border x:Name="Test" CornerRadius="5,5,6,6"  Background="{StaticResource TopBarBackground}" />
                                <StackPanel>
                                    <StackPanel.OpacityMask>
                                        <VisualBrush Visual="{Binding ElementName=Test}" />
                                    </StackPanel.OpacityMask>
                                    <Image x:Name="PosterImage" RenderOptions.BitmapScalingMode="HighQuality" />
                                </StackPanel>
                            </Grid>
                        </Border>
                   
                    </Grid>
                    <Grid Grid.Row="1" x:Name="SeasonController" />

                </Grid>
            </Border>
            <Grid Grid.Row="1">
                <WrapPanel x:Name="EpisodePanel" Background="{DynamicResource Background}">
                    <WrapPanel.Effect>
                        <DropShadowEffect Direction="300" Opacity="0.5" />
                    </WrapPanel.Effect>
                </WrapPanel >

            </Grid>
        </Grid>
    </ScrollViewer>
</Page>
