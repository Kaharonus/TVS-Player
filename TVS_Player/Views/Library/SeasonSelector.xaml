<UserControl x:Class="TVS_Player.SeasonSelector"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             Height="40" d:DesignWidth="800" Style="{DynamicResource ProductFont}">
    <Grid Margin="5,0">
        <ScrollViewer Background="{StaticResource Background}"  Margin="10,0" HorizontalScrollBarVisibility="Auto">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}"  BasedOn="{StaticResource ScrollBar}" />
            </ScrollViewer.Resources>
            <StackPanel Margin="10,0" Orientation="Horizontal" x:Name="SeasonPanel" />
        </ScrollViewer>
    </Grid>
</UserControl>
