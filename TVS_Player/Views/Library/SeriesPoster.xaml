<UserControl x:Class="TVS_Player.SeriesPoster"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVS_Player"
             mc:Ignorable="d" 
             Height="296" Width="202" Margin="5">
    <Border CornerRadius="5">
        <Grid>
            <Border x:Name="Test" CornerRadius="5"  Background="{StaticResource TopBarBackground}"/>
            <StackPanel>
                <StackPanel.OpacityMask>
                    <VisualBrush Visual="{Binding ElementName=Test}" />
                </StackPanel.OpacityMask>
                <Image x:Name="PosterImage" RenderOptions.BitmapScalingMode="HighQuality" HorizontalAlignment="Left" VerticalAlignment="Top" />
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
