<Page x:Class="TVS_Player.Library"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVS_Player"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="Library">

    <ScrollViewer Background="{StaticResource Background}" Loaded="FrameworkElement_OnLoaded" Margin="0,5">
        <ScrollViewer.Resources>
            <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource ScrollBar}" />
        </ScrollViewer.Resources>
        <WrapPanel x:Name="SeriesPanel">
            <WrapPanel.Effect>
                <DropShadowEffect Direction="300" Opacity="0.5" />
            </WrapPanel.Effect>
        </WrapPanel>
    </ScrollViewer>
</Page>
