<UserControl x:Class="TVSPlayer.SubtitleControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="250">
    <Grid>
        <TextBlock x:Name="Lang" VerticalAlignment="Top" Foreground="#F5F5F5" FontSize="18" Margin="5">Language: </TextBlock>
        <TextBlock Margin="10,5" x:Name="Version" VerticalAlignment="Bottom" Foreground="#F5F5F5" FontSize="14">Version: </TextBlock>
        <Grid x:Name="Download" HorizontalAlignment="Right" Width="27"  Margin="0,0,15,0" MouseEnter="Grid_MouseEnter" MouseLeave="Grid_MouseLeave">
            <Image Source="../Icons/ico-download-light.png" />
        </Grid>
    </Grid>
</UserControl>
