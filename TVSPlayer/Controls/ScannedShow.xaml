<UserControl x:Class="TVSPlayer.ScannedShow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="748" Margin="5">
    <Grid>
        <Grid Background="{DynamicResource BackgroundBrush}">
            <TextBlock x:Name="ShowName" Foreground="{DynamicResource TextColor}" Text="Kappa123" VerticalAlignment="Top" FontSize="22" Margin="10,0,100,0" />
            <TextBlock x:Name="FolderName" Foreground="{DynamicResource TextColor}" Text="Kappa123" VerticalAlignment="Bottom" FontSize="12" Margin="11,0,100,3" />
            <Image x:Name="RemoveIcon" Source="{DynamicResource RemoveIcon}" Width="20" Height="20" HorizontalAlignment="Right" Margin="10" />
            <Image x:Name="EditIcon" Source="{DynamicResource NewFileIcon}" Width="21" Height="21" HorizontalAlignment="Right" Margin="40,0" />
            <Image x:Name="DetailsIcon" Source="{DynamicResource QuestionIcon}" Width="20" Height="20" HorizontalAlignment="Right" Margin="70,0" />


        </Grid>

    </Grid>
</UserControl>
