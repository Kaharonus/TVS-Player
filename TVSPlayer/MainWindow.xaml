<Window x:Class="TVSPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TVSPlayer"
        mc:Ignorable="d"
        Title="TVS Player" Height="720" Width="1280" MinWidth="640" MinHeight="360">
    <Window.Resources>
        <Storyboard x:Key="ShowSearch" >
            <DoubleAnimation Storyboard.TargetProperty="Width" From="0" To="400" DecelerationRatio=".5" Duration="0:0:0.15" />
        </Storyboard>
        <Storyboard x:Key="MoveSearchLeft" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="55,0" To="455,0" DecelerationRatio=".5" Duration="0:0:0.15" />
        </Storyboard>
        <Storyboard x:Key="HideSearch" >
            <DoubleAnimation Storyboard.TargetProperty="Width" From="400" To="0" DecelerationRatio=".5" Duration="0:0:0.25" />
        </Storyboard>
        <Storyboard x:Key="MoveSearchRight" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="455,0" To="55,0" DecelerationRatio=".5" Duration="0:0:0.25" />
        </Storyboard>
        <Storyboard x:Key="ShowSideMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="-250,0" To="0" DecelerationRatio=".5" Duration="0:0:0.15" />
        </Storyboard>
        <Storyboard x:Key="HideSideMenu" >
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0" To="-250,0" DecelerationRatio=".5" Duration="0:0:0.25" />
        </Storyboard>
        <Storyboard x:Key="OpacityUp" >
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" DecelerationRatio=".5" Duration="0:0:0.15" />
        </Storyboard>
        <Storyboard x:Key="OpacityDown" >
            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" DecelerationRatio=".5" Duration="0:0:0.25" />
        </Storyboard>

    </Window.Resources>
    <Grid Background="{DynamicResource BackgroundBrush}">
        
        <Button  Width="60" Height="20" Content="Testing"/>
        <Grid x:Name="SideMenu" Margin="-250,0" HorizontalAlignment="Left" Width="225" Background="{DynamicResource BackgroundBrush}" Panel.ZIndex="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="80px"/>
                <RowDefinition />
            </Grid.RowDefinitions>
            <Image Source="Icons/LogoWide.png" Margin="10"></Image>
            <StackPanel Grid.Row="2">
                <Grid>
                    <Grid Height="45">
                        <Grid HorizontalAlignment="Left" Width="3" Background="{DynamicResource AccentColor}" />
                        <Image Source="{DynamicResource LibIcon}" HorizontalAlignment="Left" Margin="15,10" RenderOptions.BitmapScalingMode="HighQuality" />
                        <TextBlock Margin="50,8,0,5"  Text="Library" Foreground="{DynamicResource ReverseBG}" FontSize="20" />
                    </Grid>
                </Grid>
            </StackPanel>
        </Grid>
        <Grid x:Name="HiderGrid" Background="#88000000" Panel.ZIndex="9" MouseUp="HiderGrid_MouseUp" Opacity="0" Visibility="Hidden" />
        <Grid Panel.ZIndex="5" Height="40" VerticalAlignment="Top" x:Name="TopBar">
            <Grid x:Name="SideButton" Margin="10,0" HorizontalAlignment="Left" Height="20" MouseLeftButtonDown="SideButton_MouseLeftButtonDown">
                <Image Source="{DynamicResource ResourceKey=MenuIcon}" RenderOptions.BitmapScalingMode="HighQuality" ></Image>
            </Grid>
            <Grid x:Name="MoreButton" Margin="10,0" HorizontalAlignment="Right" Height="30" MouseLeftButtonDown="MoreButton_MouseLeftButtonDown">
                <Image Source="{DynamicResource ResourceKey=MoreIcon}" RenderOptions.BitmapScalingMode="HighQuality" ></Image>
            </Grid>
            <Grid x:Name="SearchButton" Margin="55,0" HorizontalAlignment="Right" Height="20" MouseLeftButtonDown="SearchButton_MouseLeftButtonDown">
                <Image Source="{DynamicResource ResourceKey=SearchIcon}" RenderOptions.BitmapScalingMode="HighQuality" ></Image>
            </Grid>
            <Grid x:Name="SearchBar" HorizontalAlignment="Right" Margin="50,5" Width="0">
                <Border Background="{DynamicResource LightestBG}" CornerRadius="3">
                    <Border Margin="3" Background="{DynamicResource LighterBG}" CornerRadius="2">
                        <TextBox x:Name="SearchBox" BorderThickness="0" Background="#00000000" Foreground="{DynamicResource ReverseBG}" FontSize="17" LostFocus="TextBox_LostFocus"></TextBox>
                    </Border>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
