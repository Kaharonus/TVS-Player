<UserControl x:Class="TVSPlayer.ScheduleDay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TVSPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Border  BorderThickness="1" BorderBrush="{DynamicResource LighterBG}">
        <Grid>
            <Grid Loaded="Grid_Loaded" x:Name="BaseGrid" Margin="2">
            </Grid>
            <TextBlock x:Name="Day" Grid.RowSpan="1000" Panel.ZIndex="5" FontSize="20" Foreground="{DynamicResource TextColor}" HorizontalAlignment="Center" VerticalAlignment="Center" />
        </Grid>
    </Border>
</UserControl>
