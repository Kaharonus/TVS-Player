<Page x:Class="TVSPlayer.ImportScanFolder"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVSPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ImportScanFolder" Loaded="Page_Loaded">
    <Grid x:Name="BackGrid">
        <Grid x:Name="BGrid" Background="#CC101010" Grid.RowSpan="3" Grid.ColumnSpan="3" RenderTransformOrigin="0.5,0.5"/>
        <Grid x:Name="Content" RenderTransformOrigin="0.5,0.5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid Background="{DynamicResource BackgroundBrush}" Grid.Row="1" Grid.Column="1" RenderTransformOrigin="0.5,0.5">
                <TextBlock Foreground="{DynamicResource TextColor}" FontSize="60" HorizontalAlignment="Center" VerticalAlignment="Center"> Test</TextBlock>
            </Grid>
        </Grid>

    </Grid>
</Page>
