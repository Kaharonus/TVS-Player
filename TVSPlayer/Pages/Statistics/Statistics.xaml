<Page x:Class="TVSPlayer.Statistics"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVSPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Statistics">
    <Grid Loaded="Base_Loaded" Background="{DynamicResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Grid>
            <TextBlock x:Name="TopText" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="22" Foreground="{DynamicResource TextColor}" Text="Disk usage per TV Show" />
            <Grid  x:Name="Base" Margin="10,55,10,0" VerticalAlignment="Bottom" Opacity="0">
            </Grid>
        </Grid>
    </Grid>
    
</Page>
