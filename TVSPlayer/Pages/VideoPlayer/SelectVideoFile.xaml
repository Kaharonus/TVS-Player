<Page x:Class="TVSPlayer.SelectVideoFile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVSPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="SelectVideoFile">

    <Grid Loaded="Grid_Loaded" Background="#00000000">
        <ScrollViewer Margin="0,45,0,100">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource DarkerScrollBar}" />
            </ScrollViewer.Resources>
            <StackPanel VerticalAlignment="Center" x:Name="Panel" >
                <TextBlock Foreground="#F5F5F5" Text="Select file to play" HorizontalAlignment="Center" FontSize="24" />
            </StackPanel>
        </ScrollViewer>

    </Grid>
</Page>
