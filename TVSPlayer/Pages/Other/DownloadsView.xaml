<Page x:Class="TVSPlayer.DownloadsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TVSPlayer"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="DownloadsView">

    <Grid Background="{DynamicResource BackgroundBrush}" Loaded="Grid_Loaded">
        <ScrollViewer CanContentScroll="False" x:Name="ScrollView" Margin="0,0">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}" BasedOn="{StaticResource DarkerScrollBar}" ></Style>
            </ScrollViewer.Resources>
            <Grid>
                <Grid Height="400" VerticalAlignment="Top">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Text="To be added..." FontSize="50" Foreground="{DynamicResource TextColor}" />
                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Bottom" FontSize="24" Text="Current downloads" Margin="10,5" Foreground="{DynamicResource TextColor}" />
                </Grid>
                <StackPanel Margin="0,400,0,0" x:Name="Panel">

                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Page>
